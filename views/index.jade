extends layout

block content
 
  ui-chatroom(data-ng-cloak)
  .heavy-well
    .heavy-header #pdxtech 
  
    .chat-message-list
      ul
        li(data-ng-repeat='message in messages',
           data-ng-class='{alert: message.user == "chatroom"}')
          //span.chat-timestamp[{{displayTime timestamp}}]
          span.chat-name &lt;{{message.user}}&gt;&nbsp;
          span.chat-text{{message.text}}
  
  .chat-input-box
    form.form-inline(data-ng-submit='sendMessage()')
      fieldset
        input(data-ng-model='message', type='text', size='50')
        input(type='submit', value='Send')
        // input.btn.btn-danger(type='button', value='Clear Messages')

  .well rating_bound:
    data-ui-rating(ng-model='data.rating_bound', max-value='5')
    data-ui-rating(ng-model='data.rating_bound', max-value='5')

  .well rating_standalone:
    data-ui-rating(ng-model='data.rating_standalone', max-value='5')
    label(for='rating_standalone_range') {{ data.rating_standalone }}
    input(id='rating_standalone_range', type='range', min='0', max='5', ng-model='data.rating_standalone')

  .well
    data-ph-ntimes(count='5')
      h3 ntimes test
